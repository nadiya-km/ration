<%- include('../../partials/navbar') %> <%- include('../../partials/sidebar') %>

<div class="container-fluid" style="margin-left: 250px; padding-top: 80px; max-width: 600px">
	<div class="card shadow-sm p-4 rounded-3">
		<h4 class="fw-semibold mb-4 text-warning">Edit Product</h4>

		<form method="POST" action="/admin/products/update-product">
			<div class="mb-3">
				<!-- <label class="form-label">Product Id</label> -->
				<input type="hidden" name="productId" value="<%= product._id %>" />
			</div>
			<div class="mb-3">
				<label class="form-label">Product Name</label>
				<select name="name" class="form-select" required disabled>
					<option value="RICE"><%=product.name%></option>
					<option value="WHEAT">WHEAT</option>
					<option value="SUGAR">SUGAR</option>
					<option value="KEROSENE">KEROSENE</option>
				</select>
			</div>

			<div class="mb-3">
				<label class="form-label">Available Quantity</label>
				<input
					type="number"
					name="availableQty"
					class="form-control"
					placeholder="Enter quantity"
					required
					value="<%=product.availableQty%>"
				/>
			</div>

			<div class="mb-3">
				<label class="form-label">Unit</label>
				<select name="unit" class="form-select" required disabled>
					<option value="KG">KG</option>
					<option value="LITRE">LITRE</option>
				</select>
			</div>

			<div class="mb-3">
				<label class="form-label">Price per Unit (â‚¹)</label>
				<input
					type="number"
					name="pricePerUnit"
					class="form-control"
					placeholder="Enter price per unit"
					required
					value="<%=product.pricePerUnit%>"
				/>
			</div>

			<button type="submit" class="btn btn-warning w-100">Update Product</button>
		</form>
	</div>
</div>
