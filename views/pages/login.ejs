<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>PDS Admin Login</title>

		<!-- Bootstrap 5 -->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
			rel="stylesheet"
		/>

		<!-- Font Awesome -->
		<link
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
			rel="stylesheet"
		/>

		<style>
			body {
				background: linear-gradient(135deg, #0f172a, #1e3a8a);
				font-family: 'Segoe UI', system-ui, sans-serif;
			}
			.login-card {
				background: #ffffff;
				border-radius: 16px;
				box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
				padding: 2rem;
			}
			.login-header i {
				font-size: 48px;
				color: #0d6efd;
			}
			.form-control {
				border-radius: 10px;
				padding: 12px;
			}
			.btn-login {
				background-color: #0d6efd;
				border-radius: 10px;
				font-weight: 600;
				padding: 12px;
			}
			.btn-login:hover {
				background-color: #0b5ed7;
			}
			.gov-text {
				font-size: 13px;
				color: #6c757d;
			}
		</style>
	</head>

	<body>
		<div class="container">
			<div class="row min-vh-100 align-product-center justify-content-center">
				<div class="col-md-5 col-lg-4 mt-5">
					<div class="login-card">
						<!-- Header -->
						<div class="text-center login-header mb-4">
							<i class="fas fa-id-card mb-3"></i>
							<h4 class="fw-bold">Ration Shop Admin Login</h4>
							<p class="gov-text">Public Distribution System (PDS)</p>
						</div>

						<!-- Error Message -->
						<% if (typeof msg !== 'undefined' && msg) { %>
						<div class="alert alert-danger text-center py-2"><%= msg %></div>
						<% } %>

						<!-- Login Form -->
						<form action="/admin/login" method="POST">
							<div class="mb-3">
								<label class="form-label fw-semibold">Admin Email</label>
								<input
									type="email"
									name="email"
									class="form-control"
									placeholder="admin@example.com"
									required
								/>
							</div>

							<div class="mb-4">
								<label class="form-label fw-semibold">Password</label>
								<input
									type="password"
									name="password"
									class="form-control"
									placeholder="Enter password"
									required
								/>
							</div>

							<button type="submit" class="btn btn-login text-white w-100">
								<i class="fas fa-sign-in-alt me-2"></i>
								Login
							</button>
						</form>

						<div class="text-center mt-4 gov-text">Authorized Government Personnel Only</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
